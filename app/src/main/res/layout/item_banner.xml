<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorPrimary"
        card_view:cardCornerRadius="@dimen/_8sdp"
        card_view:cardUseCompatPadding="true">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:paddingStart="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewVacation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/dagodreampark"/>

        <TextView
                android:id="@+id/tvNameVacation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                style="@style/DarkBoldTextSmall"
                android:layout_below="@id/imageViewVacation"
                android:text="Dago Dreampark"
                android:textSize="@dimen/_14ssp"
        />

        <TextView
                android:id="@+id/tvLokasiVacation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                style="@style/DarkRegText"
                android:drawableStart="@drawable/ic_location"
                android:layout_below="@id/tvNameVacation"
                android:textSize="@dimen/_12ssp"
                android:drawableLeft="@drawable/ic_location"
                android:text="Jl. Dago Giri Km. 2.2 Mekarwangi"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>