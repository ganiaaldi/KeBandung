<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:card_view="http://schemas.android.com/apk/res-auto"
         android:id="@+id/card_view_vacation"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/_10sdp"
         android:background="@color/colorPrimary"
        card_view:cardCornerRadius="@dimen/_8sdp"
          card_view:cardUseCompatPadding="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:paddingStart="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewVacation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_145sdp"
                android:scaleType="centerCrop"
        android:src="@drawable/dagodreampark"/>

        <TextView
                android:id="@+id/tvNameVacation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                style="@style/DarkBoldTextSmall"
                android:layout_below="@id/imageViewVacation"
                android:text="Dago Dreampark"
        />

        <TextView
                android:id="@+id/tvLokasiVacation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                style="@style/DarkRegText"
                android:drawableStart="@drawable/ic_location"
                android:layout_below="@id/tvNameVacation"
                android:drawableLeft="@drawable/ic_location"
                android:text="Jl. Dago Giri Km. 2.2 Mekarwangi"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>